global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    # Redirect all HTTP requests to HTTPS (301)
    http-request redirect scheme https code 301

frontend https_front
    bind *:443 ssl crt /etc/haproxy/certs/www.mitchellb.tech.pem
    default_backend web_back

backend web_back
    balance roundrobin
    option httpchk GET /
    server web-01 54.211.70.81:80 check
    server web-02 44.201.147.220:80 check
